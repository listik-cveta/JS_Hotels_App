<div class="page-menu">
<ul>
<li><%= link_to "View all hotels", hotels_path, class:"page_menu_text" %></li>
<li><%= link_to "Edit Hotel", edit_hotel_path(@hotel), class:"page_menu_text" %></li>
</ul>
</div>

<p class="hotel-show-title"><%= @hotel.name %></p>
<div class="container">
  <div id="contact">
    <h2>Contact Information:</h2>
    <h3>Phone Number: <%= @hotel.phone_number %></h3>
    <h3>Address: <%= @hotel.address %></h3>
    <br>
    <h2>Hotel Details:</h2>
    <h3>Price per night: $<%= @hotel.cost %> </h3>
    <h3>Minimum Night Stay: <%= @hotel.min_nights %></h3>
    <h3>Maximum people per room: <%= @hotel.max_guests %></h3>
    <h3>Minimum age to book a reservation: <%= @hotel.min_age %> years old</h3>
  </div>


  <div id="show-image"><%= image_tag @hotel.avatar.url(:show) %><div>

</div>
