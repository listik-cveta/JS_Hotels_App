<% if flash[:alert] %>
  <div class="notice"><%= flash[:alert] %></div>
<% end %>
<!-- allows the alert to show up on the page -->

<h1>Info for: <%= @user.name %></h1>
<h3>Name: <%= @user.name %></h3>
<h3>Email: <%= @user.email %></h3>
<h3>Net Worth: $<%= @user.money %></h3>
<h3><%= link_to "Edit User", edit_user_registration_path(@user) %></h3>

<% unless @user != current_user %>
<h2>Existing Reservations:</h2>
<h3><%= link_to "Create new reservation", new_reservation_path %></h3>
<% end %>

<table>
  <thead>
  <tr>
    <th><h2><%= sortable "check_in", "Check In Date" %></h2></th>
    <th><h2>&nbsp&nbsp&nbsp<%= sortable "hotel_id", "Hotel" %></h2></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <% @reservations.each do |reservation| %>
    <td><br><%= reservation.try(:check_in).try(:strftime, "%A, %B %d, %Y") %></td>
    <td><br>&nbsp&nbsp&nbsp&nbsp&nbsp<%= Hotel.find_by_id(reservation.hotel_id).name %></td>
    
    <td><br>&nbsp&nbsp<%= link_to "View Reservation", reservation_path(reservation)%><td>
    <td><br>&nbsp&nbsp<%= link_to "Edit Reservation", edit_reservation_path(reservation) %><td>
    <td><br>&nbsp&nbsp<%= link_to "Delete Reservation", reservation_path(reservation), method: :delete, data: { confirm: 'Are you sure you want to delete this reservation?' } %><td>
  </tr>
  <% end %>
  </tbody>
</table>
