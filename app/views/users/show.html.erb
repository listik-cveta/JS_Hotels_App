<% if flash[:alert] %>
  <div class="notice"><%= flash[:alert] %></div>
<% end %>
<!-- allows the alert to show up on the page -->
<div class="profile">
  <h1>Info for: <%= @user.name %></h1>
  <h3>Name: <%= @user.name %></h3>
  <h3>Email: <%= @user.email %></h3>
  <h3>Age: <%= @user.age %> years old</h3>
  <h3>Net Worth: $<%= @user.money %></h3>
</div>
<div class="home-menu">
  <ul>
    <li><%= link_to "Edit Profile", edit_user_registration_path(@user), class:"home-item" %></li>
    <li><%= link_to "Create new reservation", new_reservation_path, class:"home-item" %></li>
    <li><%= link_to "View all my reservations", user_reservations_path(@user), class:"home-item" %></li>
  </ul>
</div>



